@page "/servers"

<h3>Servers</h3>
<br />

<ul>
    @foreach (Server server in servers)
    {
        <li>@server.Name  in @server.City is <span style="color:@((server.IsOnline ? "green" : "red " )) "> @(server.IsOnline ? "Online" : "Offline")</span></li>
    }


</ul>

@* <ServerComponent></ServerComponent> *@

@code {
    private List<Server> servers = ServersRepository.GetServersByCity("Toronto");

}
